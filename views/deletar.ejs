<%- include('./components/head')%>
<body>
    <%- include('./components/header')%>
    <main>
        <div class="container">

            <span><% if(message != ""){message} %></span>
            <form action="/deletar/<%= filme.id%>" method="post">
                <div class="item">
                    <h2>deseja realmente deletar ?</h2>
                    <span><%= filme.nome %></span>
                </div>
                
                <div class="item">
                    <img src="<&= filme.imagem &>" alt="capa do filme">
                </div>

                <div class="item">
                    <a href="/filmes/<%= filme.id%>">cancelar</a>
                    <button>Confirmar</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('./components/footer')%>
    <script src="./js/script.js"></script>
</body>
</html>